{
  "compilerOptions": {
    "outDir": "./dist",
    "module": "ES6",
    "target": "esnext",
    "lib": ["esnext", "webworker"],
    "alwaysStrict": true,
    "strict": true,
    "preserveConstEnums": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "esModuleInterop": true,
    "types": ["@cloudflare/workers-types", "@types/jest", "@types/service-worker-mock"],
    "baseUrl": "./",
    "paths": {
      "@endpoints/*": ["src/endpoints/*"],
      "@helpers/*": ["src/helpers/*"],
      "@services/*": ["src/services/*"],
      "@settings/*": ["src/settings/*"],
      "@shared/*": ["node_modules/@viktorsml/logic-core/src/*"],
    }
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist", "test"]
}
