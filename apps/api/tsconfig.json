{
  "compilerOptions": {
    "outDir": "./dist",
    "module": "commonjs",
    "target": "esnext",
    "lib": ["esnext", "webworker"],
    "alwaysStrict": true,
    "strict": true,
    "preserveConstEnums": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "esModuleInterop": true,
    "types": ["@cloudflare/workers-types", "@types/jest", "@types/service-worker-mock"],
    "baseUrl": "./src/",
    "paths": {
      "@endpoints/*": ["endpoints/*"],
      "@helpers/*": ["helpers/*"],
      "@services/*": ["services/*"],
      "@settings/*": ["settings/*"]
    }
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist", "test"]
}
