{
  "name": "@viktorsml/website",
  "version": "3.0.0",
  "scripts": {
    "ng": "ng",
    "start": "npm run dev:ssr",
    "build": "npm run prerender",
    "build:server": "ng run victorsamuel-website:server && cpx proxy-server.js dist/victorsamuel-website",
    "build:ssr": "ng build && npm run build:server",
    "serve:ssr": "node dist/victorsamuel-website/proxy-server.js",
    "dev:ssr": "ng run victorsamuel-website:serve-ssr",
    "watch": "ng build --watch --configuration development",
    "test": "ng test",
    "i18n": "ng extract-i18n --output-path src/locale",
    "prerender": "npm run fix:generate-paths && ng run victorsamuel-website:prerender --routes-file static.paths.txt && npm run fix:assets && npm run fix:language-redirect && npm run fix:root-files",
    "fix:generate-paths": "node ./scripts/generate-static-routes-file.js",
    "fix:assets": "move-cli ./dist/victorsamuel-website/browser/en/assets/ ./dist/victorsamuel-website/browser/assets && rimraf ./dist/victorsamuel-website/browser/es/assets",
    "fix:language-redirect": "cpx ./src/redirect/index.html dist/victorsamuel-website/browser",
    "fix:root-files": "node ./scripts/fix-root-file.js \"robots.txt|ngsw-worker.js|ngsw.json|manifest.webmanifest\"",
    "serve:prerender": "npx http-server ./dist/victorsamuel-website/browser/ -g -b -p 4200 --proxy http://localhost:4200? -c 31556952000"
  },
  "private": true,
  "dependencies": {
    "@angular-devkit/schematics": "^13.1.3",
    "@angular/animations": "~13.1.2",
    "@angular/cdk": "^13.1.2",
    "@angular/common": "~13.1.2",
    "@angular/compiler": "~13.1.2",
    "@angular/core": "~13.1.2",
    "@angular/forms": "~13.1.2",
    "@angular/material": "^13.1.2",
    "@angular/platform-browser-dynamic": "~13.1.2",
    "@angular/platform-browser": "~13.1.2",
    "@angular/platform-server": "~13.1.2",
    "@angular/router": "~13.1.2",
    "@angular/service-worker": "~13.1.2",
    "@ngrx/effects": "^13.0.2",
    "@ngrx/store-devtools": "^13.0.2",
    "@ngrx/store": "^13.0.2",
    "@nguniversal/express-engine": "^13.0.2",
    "@notionhq/client": "~0.3.2",
    "@schematics/angular": "^12.2.5",
    "@viktorsml/logic-core": "~1.0.0",
    "angular-google-tag-manager": "^1.4.2",
    "cross-env": "~7.0.3",
    "date-fns": "^2.22.1",
    "express": "^4.15.2",
    "lodash.merge": "~4.6.2",
    "lodash": "^4.17.21",
    "ng-in-viewport": "^6.1.5",
    "ng2-tooltip-directive": "~2.10.3",
    "ngx-clipboard": "^14.0.1",
    "reseter.css": "^2.0.0",
    "rxjs": "~6.6.0",
    "tslib": "^2.1.0",
    "zone.js": "~0.11.4"
  },
  "devDependencies": {
    "@angular-builders/custom-webpack": "~13.0.0",
    "@angular-devkit/build-angular": "~13.1.3",
    "@angular/cli": "~13.1.3",
    "@angular/compiler-cli": "~13.1.2",
    "@angular/localize": "^13.1.2",
    "@nguniversal/builders": "^13.0.2",
    "@types/express": "^4.17.0",
    "@types/jasmine": "~3.6.0",
    "@types/lodash.merge": "~4.6.6",
    "@types/lodash": "^4.14.171",
    "@types/node": "^12.11.1",
    "cpx": "~1.5.0",
    "jasmine-core": "~3.7.0",
    "karma-chrome-launcher": "~3.1.0",
    "karma-coverage": "~2.0.3",
    "karma-jasmine-html-reporter": "^1.5.0",
    "karma-jasmine": "~4.0.0",
    "karma": "~6.3.0",
    "move-cli": "~1.2.1",
    "purgecss-webpack-plugin": "~4.0.3",
    "rimraf": "~3.0.2",
    "typescript": "~4.5.4"
  }
}
