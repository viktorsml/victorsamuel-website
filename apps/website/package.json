{
  "name": "@viktorsml/website",
  "version": "0.0.0",
  "scripts": {
    "ng": "ng",
    "start": "ng serve",
    "build": "npm run prerender",
    "build:server": "ng run victorsamuel-website:server && cpx proxy-server.js dist/victorsamuel-website",
    "build:ssr": "ng build && npm run build:server",
    "serve:ssr": "node dist/victorsamuel-website/proxy-server.js",
    "dev:ssr": "ng run victorsamuel-website:serve-ssr",
    "watch": "ng build --watch --configuration development",
    "test": "ng test",
    "i18n": "ng extract-i18n --output-path src/locale",
    "prerender": "ng run victorsamuel-website:prerender && npm run fix:assets && npm run fix:language-redirect && npm run fix:robots",
    "fix:robots": "cpx ./dist/victorsamuel-website/browser/en/robots.txt ./dist/victorsamuel-website/browser/ && rimraf ./dist/victorsamuel-website/browser/es/robots.txt && rimraf ./dist/victorsamuel-website/browser/en/robots.txt",
    "fix:assets": "move-cli ./dist/victorsamuel-website/browser/en/assets/ ./dist/victorsamuel-website/browser/assets && rimraf ./dist/victorsamuel-website/browser/es/assets",
    "fix:language-redirect": "cpx ./src/redirect/index.html dist/victorsamuel-website/browser",
    "serve:prerender": "npx http-server ./dist/victorsamuel-website/browser/ -g -b -p 4200 --proxy http://localhost:4200? -c 31556952000"
  },
  "private": true,
  "dependencies": {
    "@angular-devkit/schematics": "^12.2.5",
    "@angular/animations": "~12.2.5",
    "@angular/cdk": "^12.0.5",
    "@angular/common": "~12.2.5",
    "@angular/compiler": "~12.2.5",
    "@angular/core": "~12.2.5",
    "@angular/forms": "~12.2.5",
    "@angular/material": "^12.0.5",
    "@angular/platform-browser": "~12.2.5",
    "@angular/platform-browser-dynamic": "~12.2.5",
    "@angular/platform-server": "~12.2.5",
    "@angular/router": "~12.2.5",
    "@ngrx/effects": "^12.2.0",
    "@ngrx/store": "^12.1.0",
    "@ngrx/store-devtools": "^12.1.0",
    "@nguniversal/express-engine": "^12.1.0",
    "@schematics/angular": "^12.2.5",
    "angular-google-tag-manager": "^1.4.2",
    "date-fns": "^2.22.1",
    "express": "^4.15.2",
    "lodash": "^4.17.21",
    "ng-in-viewport": "^6.1.5",
    "ngx-clipboard": "^14.0.1",
    "reseter.css": "^2.0.0",
    "rxjs": "~6.6.0",
    "tslib": "^2.1.0",
    "zone.js": "~0.11.4",
    "cross-env": "~7.0.3",
    "lodash.merge": "~4.6.2",
    "ng2-tooltip-directive": "~2.10.3"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "~12.2.5",
    "@angular/cli": "~12.2.5",
    "@angular/compiler-cli": "~12.2.5",
    "@angular/localize": "^12.0.5",
    "@nguniversal/builders": "^12.1.0",
    "@types/express": "^4.17.0",
    "@types/jasmine": "~3.6.0",
    "@types/lodash": "^4.14.171",
    "@types/node": "^12.11.1",
    "jasmine-core": "~3.7.0",
    "karma": "~6.3.0",
    "karma-chrome-launcher": "~3.1.0",
    "karma-coverage": "~2.0.3",
    "karma-jasmine": "~4.0.0",
    "karma-jasmine-html-reporter": "^1.5.0",
    "typescript": "~4.2.3",
    "cpx": "~1.5.0",
    "move-cli": "~1.2.1",
    "rimraf": "~3.0.2",
    "@types/lodash.merge": "~4.6.6",
    "@angular-builders/custom-webpack": "~12.1.2",
    "purgecss-webpack-plugin": "~4.0.3"
  }
}
