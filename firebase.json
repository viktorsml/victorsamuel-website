{
  "hosting": [
    {
      "target": "victorsamuel-website",
      "public": "dist/browser",
      "ignore": ["firebase.json", "**/.*", "**/node_modules/**"],
      "rewrites": [
        {
          "source": "/es{,/**}",
          "function": "ssrEs"
        },
        {
          "source": "/en{,/**}",
          "function": "ssrEn"
        },
        {
          "source": "**",
          "function": "languageManager"
        }
      ]
    }
  ],
  "functions": {
    "predeploy": ["npm --prefix \"$RESOURCE_DIR\" run lint", "npm --prefix \"$RESOURCE_DIR\" run build"]
  }
}
